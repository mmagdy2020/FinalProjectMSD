    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>

        <!--include navigation.ejs-->
        <%- include('fragments/navigation.ejs')%>


            <center>
                <div class="container mb-4">
                    <div class="row">

                        <% if (products.length > 0) { %>
                            <% let totalPrice = 0%>

                                <div class="col-12">

                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col"> </th>
                                                    <th scope="col">Product Name </th>
                                                    <th scope="col">Available</th>
                                                    <th scope="col" class="text-center">Quantity</th>
                                                    <th scope="col" class="text-right">Item Price</th>
                                                    <th scope="col" class="text-right">total Price</th>

                                                    <th> </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% products.forEach(p => { %>

                                                    <tr>
                                                        <td>
                                                            <img src="<%=p.productId.imageUrl%>" alt="A pic" width="42" height="42">
                                                        </td>
                                                        <td>
                                                            <%= p.productId.title%>
                                                        </td>
                                                        <td>In stock</td>
                                                        <td><input class="form-control" type="text" value="<%= p.qty %>" readonly /></td>
                                                        <td class="text-right">
                                                            <%= p.productId.price %> $
                                                        </td>
                                                        <td class="text-right">
                                                            <%= p.productId.price* p.qty%> $
                                                                <% totalPrice+= (p.productId.price* p.qty)%>
                                                        </td>
                                                        <!-- Create a delete Button -->
                                                        <td class="text-right">
                                                            <form action="/deleteFromCart" method="post">
                                                                <input type="hidden" name="prodId" value="<%= p.productId._id%>">
                                                                <button type="submit" class="btn btn-danger">delete Product</button>
                                                            </form>
                                                        </td>

                                                    </tr>

                                                    <% }) %>

                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td><br><br></td>
                                                            <td align="left">Sub-Total </td>
                                                            <td class="text-right">
                                                                <%= totalPrice%> $</td>
                                                        </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>





                                <div class="col mb-2">
                                    <div class="row">
                                        <div class="col-sm-12  col-md-6">
                                            <a href='/'><button class=" btn btn-block btn-light ">Continue Shopping</button></a>
                                        </div>

                                        <!-- <form action="/order" method="post">
                                            <div class="col-sm-12 col-md-6 text-right">
                                                <button class="btn btn-lg btn-block btn-success text-uppercase">Checkout</button>
                                            </div>
                                        </form> -->
                                        <br>
                                        <div>
                                            <a class="btn" href="/checkout">Order Now</a>
                                        </div>

                                    </div>
                                </div>

                                <% } else { %>
                                    <h1>No Products in Cart!</h1>
                                    <% } %>
                    </div>
                </div>

            </center>


            <%- include('fragments/end.ejs')%>


